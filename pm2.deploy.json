{
    "apps": [
        {
            "name": "api_service",
            "script": "./dist/bin/www.js",
            "node-args": [
                "-r ts-node/register/transpile-only -r tsconfig-paths/register"
            ],
            "max_memory_restart": "1G",
            "ignore_watch": [
                "node_modules",
                "public/images"
            ],
            "watch_options": {
                "followSymlinks": false
            },
            "instances": "1",
            "exec_mode": "cluster"
        },
        {
            "name": "worker",
            "script": "./dist/workers/start.worker.js",
            "node-args": [
                "-r ts-node/register/transpile-only -r tsconfig-paths/register"
            ],
            "max_memory_restart": "800M",
            "ignore_watch": [
                "node_modules",
                "public/images"
            ],
            "watch_options": {
                "followSymlinks": false
            },
            "instances": "1",
            "exec_mode": "cluster"
        }
    ]
}